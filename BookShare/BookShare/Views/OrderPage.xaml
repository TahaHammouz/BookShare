<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookShare.Views.OrderPage"
             xmlns:viewmodels="clr-namespace:BookShare.ViewModels"
             x:DataType="viewmodels:OrderViewModel"
               Visual="Material">

    <ContentPage.BindingContext>
        <viewmodels:OrderViewModel/>
    </ContentPage.BindingContext>
    <Shell.TitleView>
        <StackLayout >
            <Label FontSize="20" Margin="0,0,25,0" TextColor="Black" FontAttributes="Bold"  HorizontalOptions="Center" 
                   VerticalOptions="CenterAndExpand" >BookShare
            </Label>
        </StackLayout>
    </Shell.TitleView>
    <ScrollView Orientation="Vertical">
        <StackLayout>

            <StackLayout Margin="30,0,30,0" Spacing="20">
                <Image Source="logo" WidthRequest="100"
                       HeightRequest="100"
                       Margin="0,0,0,0"
                       Aspect="AspectFit" 
                       />
                <Label Text="Order Your University Book Today" HorizontalTextAlignment="Center" FontSize="30" TextColor="Black"/>

                <Frame  BorderColor="#EBEBE4" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" BackgroundColor="#D9D9D9">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                       

                        <Entry 
                   PlaceholderColor="Gray"
                   BackgroundColor="#D9D9D9"
                   WidthRequest="300"
                   TextColor="Gray"  
                   x:Name="emailEntry"
                   Placeholder="Email"
                   Text="{Binding EmailEntery}"
                   IsEnabled="False"
                   HorizontalTextAlignment="Start"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="18"
                
                    />
                        <Image Grid.Column="1" Source="padlock" HeightRequest="10" WidthRequest="10" Margin="10"  />


                    </Grid>
                </Frame>
                <Frame  BorderColor="Black" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="bookname.png" HeightRequest="30" WidthRequest="30" Margin="10" />
                    <Entry  Grid.Column="1"
                   PlaceholderColor="Gray"
                   Placeholder="Book Name"
                   Keyboard="Text"
                   BackgroundColor="Transparent"
                   WidthRequest="300"
                   TextColor="Black"  
                   FontSize="18"
                   HorizontalOptions="Center" 
                   x:Name="bookName"
                   VerticalOptions="Center"
                         Text="{Binding BookName}">


                    </Entry>
                    </Grid>
                </Frame>
                <Frame  BorderColor="Black" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="online.png" HeightRequest="30" WidthRequest="30" Margin="10" />
                      
                    <Picker Grid.Column="1"
                        BackgroundColor="White"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        WidthRequest="300"
                        Title="Faculty"
                         SelectedItem="{Binding FacultyPicker}"
                   x:Name="facultyPicker"
                        TitleColor="Gray">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Engineering and Information Technology</x:String>
                                <x:String>College of Law</x:String>
                                <x:String>Faculty of Fine Arts</x:String>
                                <x:String>Faculty of Science</x:String>
                                <x:String>Faculty of Humanities</x:String>
                                <x:String>Faculty of Educational Sciences and Teacher Preparation</x:String>
                                <x:String>Faculty of Sharia</x:String>
                                <x:String>Faculty of Medicine and Health Sciences</x:String>
                                <x:String>Faculty of Agriculture and Veterinary Medicine</x:String>
                                <x:String>Faculty of Economics and Social Sciences</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                   </Grid>
                </Frame>
                <Frame  BorderColor="Black" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="id.png" HeightRequest="30" WidthRequest="30" Margin="10" />
                        <Entry  Grid.Column="1"
                   PlaceholderColor="Gray"
                   Placeholder="Student ID"
                   Keyboard="Numeric"
                   BackgroundColor="Transparent"
                   WidthRequest="300"
                   TextColor="Black"  
                   x:Name="studentId"
                   Text="{Binding StudentId}"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                    </Entry>
                      </Grid>
                </Frame>

                <Frame  BorderColor="Black" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="description.png" HeightRequest="20" WidthRequest="30" Margin="10" />
                        <Entry  Grid.Column="1"
                    
                   PlaceholderColor="Gray"
                   Placeholder="Description"
                   Keyboard="Text"
                   BackgroundColor="Transparent"
                   WidthRequest="300"
                   TextColor="Black"  
                   x:Name="bookDescription"
                   FontSize="18"
                   Text="{Binding BookDescription}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                    </Entry>
</Grid>
                </Frame>

                <Frame  BorderColor="Black" CornerRadius="10" HorizontalOptions="FillAndExpand"  Padding="0" Margin="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0" Source="telephone.png" HeightRequest="30" WidthRequest="30" Margin="10" />
                        <Entry  Grid.Column="1"
                
                   PlaceholderColor="Gray"
                   Placeholder="Phone Number"
                   Keyboard="Telephone"
                   BackgroundColor="Transparent"
                   WidthRequest="300"
                   TextColor="Black"  
                  x:Name="phoneNumber"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                         Text="{Binding PhoneNumber}"
                    >

                    </Entry>
                        </Grid>
                </Frame>
                <Frame CornerRadius="5"
      
                   Padding="0" Margin="0"
       BackgroundColor="#D9D9D9"
       >

                    <StackLayout Orientation="Horizontal"
                 VerticalOptions="Center">
                        <CheckBox x:Name="checkBox"
                                   IsChecked="{Binding IsChecked}" 
                                  
                  VerticalOptions="Center" />
                        <Label Text="I accept that the book reaches me via e-mail" TextColor="Black"
               VerticalOptions="Center" />

                    </StackLayout>

                </Frame>

                <Button  
                   WidthRequest="200"
                   Text="order"
                   BackgroundColor="#F4717F"
                   TextColor="White"
                   FontSize="20"
                    CornerRadius="10"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" 
                    Command="{Binding SendOrderCommand}"
                    
                     />
            </StackLayout>


        </StackLayout>
    </ScrollView>
</ContentPage>